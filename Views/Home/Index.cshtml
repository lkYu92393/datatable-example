@{
    ViewData["Title"] = "Home Page";
}

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/2.1.6/js/dataTables.min.js" ></script>
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.min.css" />
<style>
    .search {
        display: grid;
        grid-template-areas:
        "label label label"
        "input input input"
        ". . button"
    }

    #labelInput {
        grid-area: label;
    }
    #inputBox {
        grid-area:input;
    }
    #buttonBox {
        grid-area: button
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome to DataTable Test</h1>
    <div class='search'>
        <div id='labelInput'>
            <label for='idInput'>ID</label>
            <label for='firstNameInput'>First Name</label>
            <label for='lastNameInput'>Last Name</label>
        </div>
        <div id='inputBox'>
            <input id='idInput' placeholder='ID' />
            <input id='firstNameInput' placeholder='First Name' />
            <input id='lastNameInput' placeholder='Last Name' />
        </div>
        <div id='buttonBox'>
            <input type='button' value='Search' />
            <input type='button' value='Reset' />
        </div>
    </div>
    <table id="exampleTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    let datatable = null

    document.addEventListener("DOMContentLoaded", () => {
        datatable = new DataTable('#exampleTable', {
            serverSide: true,
            processing: true,
            ajax: {
                url: '/Data/GetData',
                type: 'POST'
            },
            columns: [
                { data: 'id', name: 'ID'},
                { data: 'employeeFirstName', name: 'First Name'},
                { data: 'employeeLastName', name: 'Last Name'},
            ]
        })
    })
</script>